<meta name="description" content="">

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="<%= page_title %>">
<meta itemprop="description" content="">
<meta itemprop="image" content="">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="www.kaoruk.com">
<meta name="twitter:title" content="<%= page_title %>">
<meta name="twitter:description" content="<%= @post.try(:plain_body) %>">
<meta name="twitter:creator" content="@devkaoru">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image:src" content="<%= @post.try(:banner) %>">

<!-- Open Graph data -->
<meta property="og:title" content="<%= page_title %>" />
<meta property="og:type" content="article" />
<meta property="og:url" content="<%= @post.try(:id) ? show_posts_url(@post.slug) : root_url %>" />
<meta property="og:image" content="<%= @post.try(:banner) %>" />
<meta property="og:description" content="<%= @post.try(:plain_body) %>" />
<meta property="og:site_name" content="<%= page_title %>" />
<meta property="article:author" content="devkaoru">
<meta property="article:published_time" content="<%= @post.try(:published_at) %>" />
<meta property="article:modified_time" content="<%= @post.try(:updated_at) %>" />
<meta property="article:section" content="Article Section" />
<meta property="article:tag" content="<%= @post ? @post.tags.pluck(:name) : '' %>" />
